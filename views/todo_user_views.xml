<odoo>
    <data>
        <record id="view_form_todo_task_inherited"
                model="ir.ui.view">
            <field name="name">Todo Task form - User extension
            </field>
            <field name="model">todoroc_app.todoroc_app</field>
            <field name="inherit_id"
                   ref="todoroc_app.view_form_todo_task"/>

            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="user_id"/>
                </field>
                <xpath expr="//field[@name='is_done']" position="before">
                    <field name="date_deadline"/>
                    <!--                   <div class="oe_chatter">
                                           <field name="message_follower_ids" widget="mail_followers"/>
                                           <field name="message_ids" widget="mail_thread"/>
                                       </div>-->
                </xpath>
                <!--                     <field name="is_done" position="before">
                                         <field name="date_deadline"/>
                                     </field>-->
                <xpath expr="//field[@name='active']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <!--        <field name="active" position="attributes">
                            <attribute name="invisible">1</attribute>
                        </field>-->
                <sheet position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </field>
        </record>

        <record id="view_tree_todo_task_inherited"
                model="ir.ui.view">
            <field name="name">Todo Task tree - User
                extension
            </field>
            <field name="model">todoroc_app.todoroc_app</field>

            <field name="inherit_id"
                   ref="todoroc_app.view_tree_todo_task"/>

            <field name="arch" type="xml">

                <field name="name" position="after">
                    <field name="user_id"/>
                </field>

            </field>
        </record>

        <record id="view_filter_todo_task_inherited" model="ir.ui.view">
            <field name="name">Todo Task tree - User extension</field>
            <field name="model">todoroc_app.todoroc_app</field>
            <field name="inherit_id" ref="todoroc_app.view_filter_todo_task"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="user_id"/>
                    <filter name="filter_my_tasks" string="My Tasks" domain="[('user_id','in',[uid,False])]"/>
                    <filter name="filter_not_assigned" string="Not  Assigned" domain="[('user_id','=',False)]"/>
                </field>
            </field>
        </record>

        <!-- Modify menu item -->
        <record id="todoroc_app.menu_todo_task" model="ir.ui.menu">
            <field name="name">My To-Do</field>
        </record>

 <!--        Action to open To-Do Task list-->
        <record model="ir.actions.act_window" id="todoroc_app.action_todo_task">
            <field name="context">
                {'search_default_filter_my_tasks': True}
            </field>
        </record>
    </data>
</odoo>